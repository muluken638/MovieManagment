generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model ButtonStatus {
  id     Int  @id @default(autoincrement())
  status Boolean @default(false)
}

model Movie {
  id          Int      @id @default(autoincrement())
  title       String?
  director    String?
  releaseYear Int?
  runtime     Int?   // Prisma does not support MySQL TIME type directly, consider using Int for minutes
  genre       Genre?
  image       String?
  rating      Float?
  plotSummary String?
  cast        String?
}


model NewData {
  movieId  Int  @id @default(autoincrement())
  title    String?
  director String?
  genre    Genre?
}

model UserRegistration {
  id        Int    @id @default(autoincrement())
  firstname String
  lastname  String
  username  String @unique
  password  String
  role      Int    @default(0)
}

enum Genre {
  Romance
  Action
  Horror
  Comedy
  Drama
  SciFi
  Documentary
  Animation
  Adventure
  Thriller
  Fantasy
  Crime
  War
  History
  Music
  Mystery
  Family
  Biography
  Sport
  Western
}
